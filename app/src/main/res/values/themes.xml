<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.Climeet" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/cm_grey9</item>
        <item name="android:statusBarColor">@color/cm_grey9</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
    </style>

    <style name="Base.Theme.Climeet" parent="Theme.AppCompat.Light"/>

    <style name="SpinnerDivideStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/white</item> <!-- divider 색 -->
        <item name="android:dividerHeight">1dp</item> <!-- divider 높이 -->
    </style>
    <style name="SpinnerTheme">
        <item name="android:dropDownListViewStyle">@style/SpinnerDivideStyle</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="All10RadiusImageView" parent="">
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <style name="Top8RadiusImageView" parent="">
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="RadioButtonTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/cm_main</item>
        <item name="colorControlNormal">@color/cm_grey5</item>
    </style>

    <style name="ThemeOverlay.NumberPicker" parent="">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="colorControlNormal">@android:color/transparent</item>
    </style>

    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_custom</item>
    </style>

    <style name="customSmallRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/small_ratingbar_custom</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:maxHeight">33dp</item>
    </style>

</resources>