<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/item_popular_routes_cardView"
            android:layout_width="90dp"
            android:layout_height="110dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#63B75D"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_popular_routes_img"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="5"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_introduce_banner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:background="@color/black"
                    android:gravity="center_vertical|start"
                    android:paddingStart="20dp"
                    android:paddingEnd="100dp"
                    android:textColor="#63B75D"
                    android:textSize="14sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

         <TextView
            android:id="@+id/tv_popular_routes_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextRegular"
            android:text="V4"
            android:textSize="14sp"
            android:textColor="#63B75D"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_popular_routes_cardView"
            app:layout_constraintStart_toStartOf="@+id/item_popular_routes_cardView" />

        <TextView
            android:id="@+id/tv_popular_routes_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="80dp"
            android:maxHeight="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:background="@drawable/rect_blackfill_nostroke_999radius"
            android:paddingStart="18dp"
            android:paddingEnd="8dp"
            style="@style/TextRegular"
            android:layout_marginTop="5dp"
            android:paddingVertical="2dp"
            android:text="더클라임 연남"
            android:textColor="@color/white"
            android:textSize="8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_popular_routes_cardView" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_location"
            app:layout_constraintBottom_toBottomOf="@+id/tv_popular_routes_location"
            app:layout_constraintStart_toStartOf="@+id/tv_popular_routes_location"
            app:layout_constraintTop_toTopOf="@+id/tv_popular_routes_location" />

        <TextView
            android:id="@+id/tv_popular_routes_sector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_blackfill_nostroke_999radius"
            android:paddingVertical="2dp"
            android:layout_marginTop="2dp"
            android:paddingStart="18dp"
            android:paddingEnd="8dp"
            style="@style/TextRegular"
            android:maxWidth="80dp"
            android:maxHeight="15dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="툇마루"
            android:textColor="@color/white"
            android:textSize="8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_popular_routes_location" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_sector"
            app:layout_constraintBottom_toBottomOf="@+id/tv_popular_routes_sector"
            app:layout_constraintStart_toStartOf="@+id/tv_popular_routes_sector"
            app:layout_constraintTop_toTopOf="@+id/tv_popular_routes_sector" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>