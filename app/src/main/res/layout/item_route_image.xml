<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.climus.climeet.presentation.ui.main.global.selectsector.model.RouteUiData" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rect_blackfill_nostroke_8radius"
        android:paddingBottom="2dp"
        android:clipToPadding="false"
        android:onClick="@{() -> item.onClickListener.invoke(item.sectorId)}">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:imgUrl="@{item.routeImg}"
            app:layout_constraintBottom_toBottomOf="@id/guideline_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/Top8RadiusImageView"
            tools:src="@drawable/test" />

        <TextView
            android:id="@+id/tv_level"
            style="@style/TextTiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:textHexColor="@{item.gymLevelColor}"
            android:text="@{item.gymLevelName}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_image"
            tools:text="V1" />

        <View
            android:id="@+id/v_stroke"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rect_nofill_blackstroke_6radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>