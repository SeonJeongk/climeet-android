<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.main.mypage.review.MyPageReviewFragment">

        <TextView
            android:id="@+id/textView22"
            style="@style/TextLargeBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="리뷰 작성"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView23"
            style="@style/TextLargeBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="리뷰 남기기"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView22" />

        <TextView
            android:id="@+id/tv_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="클라이밍을 만나다, 클밋"
            android:textColor="#DFDFDF"
            style="@style/TextRegular"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView23" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tv_review">

            <ImageView
                android:id="@+id/ic_review1"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginHorizontal="3dp"
                android:src="@drawable/ic_review1" />

            <ImageView
                android:id="@+id/ic_review2"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginHorizontal="3dp"
                android:src="@drawable/ic_review2" />

            <ImageView
                android:id="@+id/ic_review3"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginHorizontal="3dp"
                android:src="@drawable/ic_review3" />

            <ImageView
                android:id="@+id/ic_review4"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginHorizontal="3dp"
                android:src="@drawable/ic_review4" />

            <ImageView
                android:id="@+id/ic_review5"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginHorizontal="3dp"
                android:src="@drawable/ic_review5" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_review"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rect_grey0fill_nostroke_12radius"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="30dp"
            android:paddingHorizontal="14dp"
            android:textSize="14sp"
            android:textColorHint="#3D3D3D"
            android:textColor="#3D3D3D"
            style="@style/TextRegular"
            android:lineSpacingExtra="7dp"
            android:hint="클밋응원 감사합니다.\n리뷰는 클밋에게 큰 힘이 되어요!"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton"
            style="@style/TextLargeBold"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rect_mainfill_nostroke_12radius"
            android:text="리뷰 남기기"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/et_review"
            tools:layout_editor_absoluteX="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="커피 한 잔 후원 정말 감사합니다."
            android:textColor="@color/white"
            android:textSize="16sp"
            style="@style/TextLargeBold"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/appCompatButton2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton2"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginHorizontal="60dp"
            android:text="커피 한 잔 후원하기"
            android:textSize="16sp"
            style="@style/TextLargeBold"
            android:textColor="@color/black"
            android:background="@drawable/rect_lightgrayfill_nostroke_noradius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appCompatButton" />
        
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>