<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="100dp"
            android:layout_height="135dp"
            android:background="@drawable/rect_lightblackfill_nostorke_5radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_item_crag_name"
            app:layout_constraintStart_toStartOf="@+id/tv_item_crag_name"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/popular_crag_ranking"
            style="@style/TextSmall"
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_greyfill_nostroke_2radius"
            android:gravity="center"
            android:text="10"
            android:layout_marginTop="8dp"
            android:layout_marginStart="6dp"
            android:textSize="8sp"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="@+id/textView9" />

        <ImageView
            android:id="@+id/iv_soaring"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/ic_soaring_fire"
            android:visibility="invisible"
            android:layout_marginEnd="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_soaring"
            app:layout_constraintEnd_toStartOf="@+id/tv_soaring"
            app:layout_constraintTop_toTopOf="@+id/tv_soaring" />

        <TextView
            android:id="@+id/tv_soaring"
            style="@style/TextTiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="6dp"
            android:text="팔로워 급상승"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="@+id/textView9" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_popular_crag_profile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/img_crag"
            app:civ_border_overlay="true"
            app:civ_border_width="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/popular_crag_ranking" />

        <TextView
            android:id="@+id/tv_item_crag_name"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:text="더클라임 연남"
            android:gravity="center"
            android:maxWidth="90dp"
            android:maxHeight="18dp"
            android:ellipsize="end"
            android:singleLine="true"
            style="@style/TextTiny"
            android:textColor="#F7F7F7"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_popular_crag_profile" />

        <TextView
            android:id="@+id/tv_item_followers"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginTop="3dp"
            android:maxWidth="90dp"
            android:maxHeight="18dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center"
            android:text="팔로워 35"
            style="@style/TextTiny"
            android:textColor="#F7F7F7"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_crag_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>