<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.main.home.viewpager.best.CompleteClimbingFragment">

    <ImageView
        android:id="@+id/iv_time_ranking1"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/oval_lightgreyfill_nostroke_noradius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/iv_time_ranking_number1"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="3dp"
        style="@style/TextLargeBold"
        android:text="1"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@drawable/oval_mainfill_nostroke_noradius"
        app:layout_constraintEnd_toEndOf="@+id/iv_time_ranking1"
        app:layout_constraintTop_toTopOf="@+id/iv_time_ranking1" />

    <TextView
        android:id="@+id/tv_time_ranking1_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나는야 헤일"
        style="@style/TextSmallSemiBold"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/cm_stargrey"
        app:layout_constraintEnd_toEndOf="@+id/iv_time_ranking1"
        app:layout_constraintStart_toStartOf="@+id/iv_time_ranking1"
        app:layout_constraintTop_toBottomOf="@+id/iv_time_ranking1" />

    <TextView
        android:id="@+id/time_record1"
        style="@style/TextSmallSemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완등한 문제 12"
        android:textSize="10sp"
        android:textColor="@color/cm_grey6"
        app:layout_constraintEnd_toEndOf="@+id/iv_time_ranking1"
        app:layout_constraintStart_toStartOf="@+id/iv_time_ranking1"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_ranking1_nickname" />

    <ImageView
        android:id="@+id/iv_time_ranking2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/oval_lightgreyfill_nostroke_noradius"
        app:layout_constraintBottom_toBottomOf="@+id/iv_time_ranking1"
        app:layout_constraintEnd_toStartOf="@+id/iv_time_ranking1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/iv_time_ranking_number2"
        style="@style/TextLargeBold"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/oval_mainfill_nostroke_noradius"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_time_ranking2"
        app:layout_constraintTop_toTopOf="@+id/iv_time_ranking2" />

    <TextView
        android:id="@+id/tv_time_ranking2_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="켈리"
        style="@style/TextSmallSemiBold"
        android:textSize="12sp"
        android:textColor="@color/cm_stargrey"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_time_ranking2"
        app:layout_constraintStart_toStartOf="@+id/iv_time_ranking2"
        app:layout_constraintTop_toBottomOf="@+id/iv_time_ranking2" />

    <TextView
        android:id="@+id/time_record2"
        style="@style/TextSmallSemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완등한 문제 10"
        android:textSize="10sp"
        android:textColor="@color/cm_grey6"
        app:layout_constraintEnd_toEndOf="@+id/iv_time_ranking2"
        app:layout_constraintStart_toStartOf="@+id/iv_time_ranking2"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_ranking2_nickname" />

    <ImageView
        android:id="@+id/iv_time_ranking3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/oval_lightgreyfill_nostroke_noradius"
        app:layout_constraintBottom_toBottomOf="@+id/iv_time_ranking1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_time_ranking1" />

    <TextView
        android:id="@+id/iv_time_ranking_number3"
        style="@style/TextLargeBold"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/oval_mainfill_nostroke_noradius"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_time_ranking3"
        app:layout_constraintTop_toTopOf="@+id/iv_time_ranking3" />

    <TextView
        android:id="@+id/tv_time_ranking3_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="클밋짱"
        style="@style/TextSmallSemiBold"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/cm_stargrey"
        app:layout_constraintEnd_toEndOf="@+id/iv_time_ranking3"
        app:layout_constraintStart_toStartOf="@+id/iv_time_ranking3"
        app:layout_constraintTop_toBottomOf="@+id/iv_time_ranking3" />

    <TextView
        android:id="@+id/time_record3"
        style="@style/TextSmallSemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완등한 문제 9"
        android:textSize="10sp"
        android:textColor="@color/cm_grey6"
        app:layout_constraintEnd_toEndOf="@+id/iv_time_ranking3"
        app:layout_constraintStart_toStartOf="@+id/iv_time_ranking3"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_ranking3_nickname" />

</androidx.constraintlayout.widget.ConstraintLayout>