<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cm_grey9"
        tools:context=".presentation.ui.intro.signup.climer.noticesetting.NoticeSettingFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_climbing_goal_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                style="@style/TextMediumBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="클라이밍 목표"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/climbing_goal_underline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#FCFFFF"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintLayout1" />

        <TextView
            android:id="@+id/tv_notice_setting_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:text="켈리님,"
            android:textColor="@color/white"
            android:textSize="25sp"
            style="@style/TextLargeBold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_climbing_goal_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            style="@style/TextLargeBold"
            android:text="우리 조금 더 자주 만나요!"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_notice_setting_nickname"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            style="@style/TextLargeBold"
            android:text="나의 활동을 기록할수록 더 많은 정상을 만날 수 있어요.\n언제든지 [My > 설정 > 알림]에서 변경할 수 있어요."
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_climbing_goal_nickname" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rect_grey7_radius20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_notice_up"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <ImageView
            android:id="@+id/iv_main_circle"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_main_circle"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/shape_gray7_circle"
            app:layout_constraintBottom_toBottomOf="@+id/iv_main_circle"
            app:layout_constraintEnd_toEndOf="@+id/iv_main_circle"
            app:layout_constraintStart_toStartOf="@+id/iv_main_circle"
            app:layout_constraintTop_toTopOf="@+id/iv_main_circle" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            style="@style/TextLargeBold"
            android:text="클밋"
            android:textColor="@color/cm_main"
            app:layout_constraintStart_toEndOf="@+id/iv_main_circle"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <TextView
            android:id="@+id/tv_notice_setting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextLargeBold"
            android:layout_marginTop="14dp"
            android:text="now"
            android:textSize="12sp"
            android:layout_marginLeft="7dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <TextView
            android:id="@+id/tv_notice_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextLargeBold"
            android:text="켈리 회원님!"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/tv_notice_setting_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            style="@style/TextLargeBold"
            android:text="이번주 완등레벨이 올라갔어요. 지금 바로 확인해보세요."
            android:textColor="@color/cm_grey3"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/tv_notice_setting_title" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rect_grey7_radius20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_notice_up"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <ImageView
            android:id="@+id/iv_main_circle2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_main_circle"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/shape_gray7_circle"
            app:layout_constraintBottom_toBottomOf="@+id/iv_main_circle2"
            app:layout_constraintEnd_toEndOf="@+id/iv_main_circle2"
            app:layout_constraintStart_toStartOf="@+id/iv_main_circle2"
            app:layout_constraintTop_toTopOf="@+id/iv_main_circle2" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_notice_down"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView3" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            style="@style/TextLargeBold"
            android:text="클밋"
            android:textColor="@color/cm_main"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/iv_main_circle2"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <TextView
            android:id="@+id/tv_notice_setting_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="14dp"
            style="@style/TextLargeBold"
            android:text="now"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <TextView
            android:id="@+id/tv_notice_setting_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextLargeBold"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="클손실 주의하세요"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/tv_notice_setting_contents2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextLargeBold"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="마지막으로 클라이밍한지 7일이 지났어요.\n오늘은 꼭 완등에 도전해보세요."
            android:textColor="@color/cm_grey3"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/tv_notice_setting_title2" />

        <TextView
            android:id="@+id/tv_notice_setting_disagree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:text="다음에 알림받기"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/cm_main"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_notice_setting_agreement"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <View
            android:id="@+id/underline"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_notice_setting_disagree"
            android:background="@color/cm_main"
            app:layout_constraintBottom_toBottomOf="@+id/tv_notice_setting_disagree"
            app:layout_constraintEnd_toEndOf="@+id/tv_notice_setting_disagree"
            app:layout_constraintStart_toStartOf="@+id/tv_notice_setting_disagree" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_notice_setting_agreement"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/rect_main_radius999"
            android:fontFamily="@font/pretendard_bold"
            android:text="알림받고 실력 상승하기"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
