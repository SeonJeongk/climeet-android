<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.climus.climeet.presentation.ui.intro.signup.admin.service.SetAdminServiceViewModel" />

        <variable
            name="position"
            type="int" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:onClick="@{() -> vm.toggleServiceSelection(position)}">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_item"
            style="@style/TextMediumSemiBold"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="text"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/rect_grey7fill_nostroke_5radius"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>