<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <View
            android:id="@+id/view_date"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/rect_grey8fill_nostroke_5radius"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/TextSmallSemiBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/cm_grey6"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="@id/view_date"
            app:layout_constraintStart_toStartOf="@id/view_date"
            app:layout_constraintTop_toBottomOf="@id/view_date" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>