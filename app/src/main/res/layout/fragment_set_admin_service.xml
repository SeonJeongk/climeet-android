<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <data>
        <variable
            name="vm"
            type="com.climus.climeet.presentation.ui.intro.signup.admin.AdminSignupViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/transparent"
                android:onClick="@{() -> vm.navigateToBack()}"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextMediumBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:text="배경 설정"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_top"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/view_line"
            app:layout_constraintBottom_toTopOf="@id/guide">
            <!--   주의 문구    -->
            <TextView
                android:id="@+id/tv_explain_large"
                style="@style/TextLargeBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_admin_service_explain_large"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_explain_regular"
                style="@style/TextRegularSemiBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/set_admin_service_explain_regular"
                app:layout_constraintTop_toBottomOf="@id/tv_explain_large"
                app:layout_constraintStart_toStartOf="parent"/>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:orientation = "horizontal"
                android:columnCount="2"
                android:rowCount="4"
                app:layout_constraintTop_toBottomOf="@id/tv_explain_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Button 1 -->
                <android.widget.Button
                    style="@style/TextMediumSemiBold"
                    android:id="@+id/btn_shower_place"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:text="샤워 시설"
                    android:textColor="@color/txt_selector_white_black"
                    android:background="@drawable/btn_selected_background"/>
                <!-- Button 2 -->
                <android.widget.Button
                    style="@style/TextMediumSemiBold"
                    android:id="@+id/btn_shower_item"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:text="샤워 용품"
                    android:textColor="@color/txt_selector_white_black"
                    android:background="@drawable/btn_selected_background"/>
                <!-- Button 3 -->
                <android.widget.Button
                    style="@style/TextMediumSemiBold"
                    android:id="@+id/btn_tower"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:text="수건 제공"
                    android:textColor="@color/txt_selector_white_black"
                    android:background="@drawable/btn_selected_background"/>
                <!-- Button 4 -->
                <android.widget.Button
                    style="@style/TextMediumSemiBold"
                    android:id="@+id/btn_washstand"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:text="간이 세면대"
                    android:textColor="@color/txt_selector_white_black"
                    android:background="@drawable/btn_selected_background"/>
                <!-- Button 5 -->
                <android.widget.Button
                    style="@style/TextMediumSemiBold"
                    android:id="@+id/btn_chalk"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:text="초크 대여"
                    android:textColor="@color/txt_selector_white_black"
                    android:background="@drawable/btn_selected_background"/>
                <!-- Button 6 -->
                <android.widget.Button
                    style="@style/TextMediumSemiBold"
                    android:id="@+id/btn_shoes"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:text="암벽화 대여"
                    android:textColor="@color/txt_selector_white_black"
                    android:background="@drawable/btn_selected_background"/>
                <!-- Button 7 -->
                <android.widget.Button
                    style="@style/TextMediumSemiBold"
                    android:id="@+id/btn_tripod"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:text="삼각대 대여"
                    android:textColor="@color/txt_selector_white_black"
                    android:background="@drawable/btn_selected_background"/>
                <!-- Button 8 -->
                <android.widget.Button
                    style="@style/TextMediumSemiBold"
                    android:id="@+id/btn_clothes"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:text="운동복 대여"
                    android:textColor="@color/txt_selector_white_black"
                    android:background="@drawable/btn_selected_background"/>

            </GridLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/btn_next_disabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_next_disabled"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_next_activated"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>